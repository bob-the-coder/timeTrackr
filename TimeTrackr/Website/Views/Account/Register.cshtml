@{
    ViewBag.Title = "Register";
}

<div class="block black-on-white centered" id="loginFormWrapper">
    <h2 class="white-on-blue">Create Account</h2>
    <div class="block-content">
        <label>Email</label>
        <input type="text" id="email" placeholder="email" />
        <label>Password</label>
        <input type="text" id="password" placeholder="password" />
        <label>Confirm Password</label>
        <input type="text" id="confirmpassword" placeholder="confirm password" />
        <button class="white-on-blue">Create Account</button>
    </div>
</div>
